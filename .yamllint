---
#extends: default
#
rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  colons:
    max-spaces-after: -1
    level: error
  commas:
    max-spaces-after: -1
    level: error
  comments: disable
  comments-indentation: false
  document-start: disable
  empty-lines: disable
  hyphens:
    level: error
  indentation: enable
  key-duplicates: enable
  line-length:
    max: 180
  new-line-at-end-of-file: disable
  new-lines:
    type: unix
  trailing-spaces: enable
  truthy: disable
